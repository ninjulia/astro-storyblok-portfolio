---
import { storyblokEditable } from '@storyblok/astro';
const { blok, name, required } = Astro.props;
---

<div {...storyblokEditable(blok)}>
	<input
		type="radio"
		name={name}
		value={blok.option}
		id={blok._uid}
		class="m-0"
		required={required ? true : false}
		checked={blok.checked ? true : false}
	/>
	<label for={blok._uid}>
		{blok.option}
	</label>
</div>
